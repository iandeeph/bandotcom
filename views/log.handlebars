{{#section 'title'}}
    Laporan Aktivitas
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Laporan Aktivitas</span>
        </div>
        <div class="col s12">
            <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 almost-full">
                    <div class="home-table row">
                        <table class="bordered">
                            <thead>
                            <tr class="border-bottom">
                                <th width="1%">No</th>
                                <th width="2%">Tanggal</th>
                                <th width="5%">User</th>
                                <th width="5%">Aktivitas</th>
                                <th width="15%">Detail</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each rows}}
                                <tr>
                                    <td class="center">{{numbyIndex @key}}</td>
                                    <td>{{dateTime tanggal}}</td>
                                    <td>{{user}}</td>
                                    <td>{{aksi}}</td>
                                    <td>{{breakLine detail}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>